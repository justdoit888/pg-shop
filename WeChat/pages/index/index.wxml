<view>
  <swiper indicator-dots="{{true}}" indicator-color="#a5e8d0" autoplay="true" circular="true">
    <block wx:for="{{banner}}" wx:key="banner">
      <swiper-item>
        <image src='{{item}}' mode="aspectFill" style="width:100%;height:100%;" />
      </swiper-item>
    </block>
  </swiper>
</view>
<view class="category-panel1">
  <view class="category-panel2">
    <view bindtap='btnclick1' class="category-item">
      <image class="category-item-image" src="/images/joinus.png" />
      <text class="category-item-text">加入我们</text>
    </view>
     <view bindtap='btnclick2' class="category-item">
      <image class="category-item-image" src="/images/aboutus.png" />
      <text class="category-item-text">关于我们</text>
    </view>
  </view>

  <view class="category-panel2">
    <view bindtap='btnclick3' class="category-item">
      <image class="category-item-image" src="/images/sysnotice.png" />
      <text class="category-item-text">系统公告</text>
    </view>
    <view class="category-item">
      <button class="kf_button" open-type="contact" session-from="weapp">
        <image class="category-item-image1" src="/images/kf.png" />
      </button>
       <text class="category-item-text1">客服</text>
    </view>
  </view>
</view>


