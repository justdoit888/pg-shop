/* pages/login/joinus.wxss */
page{
  height: 100%;
}
.root{
  height: 100%;
  width: 100%;
}
.name{
  display: flex;
  flex-direction: row;
  margin-left: 15%;
  margin-top: 10%;
  margin-bottom: 10%;
}
.name_input{
  height: 5%;
  width: 50%;
  border: 1px solid black;
  margin-left: 24%;
}
.tel{
  display: flex;
  flex-direction: row;
  margin-left: 15%;
  margin-top: 10%;
  margin-bottom: 10%;
}
.tel_input{
  margin-left: 20%;
  height: 5%;
  width: 50%;
  border: 1px solid black;
}
.qq{
  display: flex;
  flex-direction: row;
  margin-left: 15%;
  margin-top: 10%;
  margin-bottom: 10%;
}
.qq_input{
  margin-left: 11%;
  height: 5%;
  width: 50%;
  border: 1px solid black;
}
.alipay{
  display: flex;
  flex-direction: row;
  margin-left: 15%;
  margin-top: 10%;
  margin-bottom: 10%;
}
.alipay_input{
  margin-left: 3%;
  height: 5%;
  width: 50%;
  border: 1px solid black;
}
.button{
  margin-left: 10%;
  margin-top: 20%;
}
.button_text{
  background-color: red;
  width: 50%;
}

.select_box{
  display: flex;
  flex-direction: row;
  margin-left: 15%;
  margin-top: 10%;
  margin-bottom: 10%;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 56%;
  height: 70rpx;
  border:1px solid black;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-left: 19%;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  width: 52%;
  margin-left:37%;
}